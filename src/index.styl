active-color = #ff0000

html, body, #app, #app > div
  height: 100%
  margin: 0
  padding: 0

#recipe-editor label
  display: block

#app > div
  display: flex

#recipe, #recipe-index, #recipe-editor
  height: 100%
  overflow-y: scroll

#recipe, #recipe-editor
  flex-grow: 1
  padding: 0 10px

recipe-button-height = 70px
recipe-button-width = 220px

#recipe-index
  list-style-type: none
  padding: 0
  margin: 0
  flex-shrink: 0

  li
    border-bottom: 1px #ccc solid
    white-space: nowrap

    &#logo
      background-image: url('logo.png')
      background-size: auto 60px
      background-repeat: no-repeat
      background-position: center

      a
        width: 100%

    a, button
      margin: 5px 0
      height: recipe-button-height
      line-height: @height - 20px
      padding: 10px 5px
      display: inline-block
      vertical-align: middle
      box-sizing: border-box

    a
      border-width = 3px
      white-space: nowrap
      width: recipe-button-width
      overflow: hidden
      text-overflow: ellipsis
      text-decoration: none
      color: black
      border-left: transparent border-width solid
      transition: border-left-color 0.25s ease

      &.active
        border-left-color: active-color

      .recipe-name
        // holds the name of the recipe and the time created
        line-height: normal
        display: inline-block
        vertical-align: middle

      time
        display: block
        font-size: 0.5em
        color: #616161

        &:before
          content: 'created '

    button
      background: transparent
      border: none
      cursor: pointer

    button:hover, &.recipe-link a:hover, #new-recipe:hover
        background-color: #ccc
        transition: background-color 0.5s ease

    #new-recipe
      width: 100%
      // recipe-button-height accounts for the size of the delete button
      min-width: recipe-button-width + recipe-button-height
      box-sizing: border-box
      text-align: left

    button.delete
      font-size: 0 // hide the "delete" text
      background-image: url('./icon/trash.svg')
      background-repeat: no-repeat
      background-position: center
      background-size: 15px
      min-width: recipe-button-height
      border-left: #ccc 1px solid

#recipe-editor
  input[name="name"]
    font-size: 1.5em
    font-weight: bold
    margin: 0.8em 0

  textarea
    width: 100%
    min-height: 150px

#recipe
  img
    max-height: 300px
