active-color = #4d90f0

html, body, #app, #app > div
  height: 100%
  margin: 0
  padding: 0

#recipe-editor label
  display: block

#app > div
  display: flex

#recipe, #recipe-index, #recipe-editor
  height: 100%
  overflow-y: scroll

#recipe, #recipe-editor
  flex-grow: 1
  padding: 0 10px

#recipe-index
  list-style-type: none
  padding: 0
  margin: 0
  flex-shrink: 0

  li
    border-bottom: 1px #ccc solid
    white-space: nowrap

    a, button
      margin: 5px 0
      line-height: 40px
      height: 40px
      padding: 10px 5px
      display: inline-block
      vertical-align: middle
      box-sizing: content-box

    a
      border-width = 3px
      white-space: nowrap
      width: 200px
      overflow: hidden
      text-overflow: ellipsis
      border-left: transparent border-width solid

      &.active
        border-left: active-color border-width solid

    button
      background: transparent
      border: none
      cursor: pointer

    button:hover, a:hover
        background-color: #ccc
        transition: background-color 0.5s ease

    #new-recipe
      width: 200px
      text-align: left

    button.delete
      font-size: 0 // hide the "delete" text
      background-image: url('./icon/trash.svg')
      background-repeat: no-repeat
      background-position: center
      background-size: 15px
      min-width: 30px

#recipe-editor
  textarea
    width: 100%
    min-height: 150px
